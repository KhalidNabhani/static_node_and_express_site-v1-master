extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= proj.project_name 

        p= proj.description

      .project-tech-links-box.box
        h6 Technologies
        ul

        each tech in proj.technologies
          li= tech
          

        a.btn-link(href=`${proj.live_link}`) Live Demo
        a.btn-link(href=`${proj.github_link}`) GitHub Repo

    .project-img-box.box

          
    each image in proj.image_urls.slice(1)
      img.project-img(src=`${image}`, alt=`${proj.project_name}`)
     

    nav.nav
      a(href='/')
        span &larr;
        |  Back
